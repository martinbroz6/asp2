@page "/person/list"
@inject InsCorpDbContext db
@inject NavigationManager nav

<h3>Seznam osob</h3>

<table class="table">
    <tr>
        <td>
            Jméno
            </td>
        <td>
            Příjmení
        </td>
        <td>
            Datum narození
        </td>
        <td>
            E-mail
        </td>
        <td>
            Akce
        </td>
    </tr>
    @foreach (var person in people)
    {
        <tr>
            <td>
                @person.FirstName
            </td>
            <td>
                @person.LastName
            </td>
            <td>
                @person.DateOfBirth.ToShortDateString()
            </td>
            <td>
                <a href="/person/detail/@person.Id">
                    @person.Email
                </a>
            </td>
            <td style="pb-1">
                <a class="btn btn-primary btn-sm bg-danger"  href="/person/edit/@person.Id">
                    edit
                </a>
            </td>
            <td>
                <button class="btn btn-primary btn-sm bg-success" @onclick="() => EditPerson(person.Id)">
                    edit
                </button>
            </td>
        </tr>
    }
    <tr>
        <td colspan="6">
            <button class="btn btn-primary btn-sm bg-success" @onclick="Prev">
               zpět
            </button>
            <button class="btn btn-primary btn-sm bg-success" @onclick="Next">
               vpřed
            </button>
        </td>
    </tr>
</table>

@code {
    List<Person> people = new();

    int iCurrentPage = 0;

    protected override void OnInitialized()
    {
        LoadPeople();
    }

    void EditPerson(int id)
    {
        nav.NavigateTo($"/person/edit/{id}");
    }

    void LoadPeople()
    {
        people = db.Persons.Skip(iCurrentPage * 20).Take(20).ToList();
    }

    void Prev()
    {
        if (iCurrentPage > 0)
            --iCurrentPage;
        LoadPeople();
    }

    void Next()
    {
        ++iCurrentPage;
        LoadPeople();
    }
}
